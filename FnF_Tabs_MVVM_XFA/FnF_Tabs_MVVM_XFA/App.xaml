<?xml version="1.0" encoding="utf-8" ?>
<Application xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FnF_Tabs_MVVM_XFA.App">
    <Application.Resources>
        <ResourceDictionary>
            <!--Global Styles-->
            <Color x:Key="NavigationPrimary">#2196F3</Color>
            <Style TargetType="NavigationPage">
                <Setter Property="BarBackgroundColor" Value="{StaticResource NavigationPrimary}" />
                <Setter Property="BarTextColor" Value="White" />
            </Style>

            <OnPlatform x:Key="SyncFontIcons" x:TypeArguments="x:String">
                <On Platform="iOS" Value="Sync FontIcons" />
                <On Platform="Android" Value="Sync FontIcons.ttf#" />
                <On Platform="UWP" Value="Assets/Fonts/Sync FontIcons.ttf#Sync FontIcons" />
            </OnPlatform>
        </ResourceDictionary>
    </Application.Resources>
</Application>